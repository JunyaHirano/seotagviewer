{
  "manifest_version": 2,
  "name": "SEOTagViewer",
  "description": "This extension will read robots.txt and detect NoIndex, Canonical and so on in this page.（ページのrobots.txt、noindexやcanonicalなどを表示します）",
  "version": "0.0.1",
  "icons": {
    "16": "images/icon/icon_16.png",
    "48": "images/icon/icon_48.png",
    "128": "images/icon/icon_128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": ["css/style.css"],
      "js": ["js/jquery-2.2.4.min.js", "js/action.js"]
    }
  ],
  "permissions": [
    "tabs",
    "https://*/*",
    "http://*/*",
    "storage"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "background":{
  "scripts":  ["js/background.js"]
  },
  "browser_action": {
     "default_icon": {
         "19": "images/icon/icon_off.png"
         },
     "default_title": "SEOTagViewer"
  }
}